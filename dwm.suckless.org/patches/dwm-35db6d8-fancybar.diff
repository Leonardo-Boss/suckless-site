 void
 drawbar(Monitor *m) {
-	int x, xx, w;
-	unsigned int i, occ = 0, urg = 0;
+	int x, xx, w, tw, mw;
+	unsigned int i, occ = 0, urg = 0, n = 0, extra = 0;
 	Client *c;
 
 	for(c = m->clients; c; c = c->next) {
+		if(ISVISIBLE(c))
+			n++;
 		occ |= c->tags;
 		if(c->isurgent)
 			urg |= c->tags;
@@ -728,15 +730,40 @@ drawbar(Monitor *m) {
 		x = m->ww;
 	if((w = x - xx) > bh) {
 		x = xx;
-		if(m->sel) {
-			drw_setscheme(drw, m == selmon ? &scheme[SchemeSel] : &scheme[SchemeNorm]);
