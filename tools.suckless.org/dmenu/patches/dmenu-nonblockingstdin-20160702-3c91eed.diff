+		die("cannot set stdin control flags:");
+	for(;;) {
+		FD_ZERO(&fds);
+		FD_SET(xfd, &fds);
+		if(!feof(stdin))
+			FD_SET(STDIN_FILENO, &fds);
+		if(select(MAX(STDIN_FILENO, xfd) + 1, &fds, NULL, NULL, NULL) == -1)
+			die("cannot multiplex input:");
+		if(FD_ISSET(xfd, &fds))
+			readevent();
+		if(FD_ISSET(STDIN_FILENO, &fds))
+			readstdin();
+	}
+}
